<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start">

    <android.support.v7.widget.CardView
        style="@style/AppWidget.Card.Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            style="@style/AppWidget.CardInner.Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.aluxian.codementor.ui.views.WrapWidthTextView
                android:id="@+id/tv_message"
                style="@style/AppWidget.CardMainText.Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_subtext"
                style="@style/AppWidget.CardSubText.Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_message" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
